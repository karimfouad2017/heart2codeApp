{
  "hooks": {
    "after:bump": "npx auto-changelog -p -l 0 --starting-version 1.0.0-alpha.1"
  },
  "git": {
    "changelog": "npx auto-changelog --stdout -l 0 -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  },
  "plugins": {
    "./scripts/bump-dependencies.js": {}
  }
}
